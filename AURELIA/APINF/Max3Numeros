PROGRAMA Máximo e Mínimo de 3 números
<br>
<script type="text/javascript">
// declaração de variáveis
var a, b, c;
// leitura
a = parseInt(prompt("número 1"));
b = parseInt(prompt("número 2"));
c = parseInt(prompt("número 3"));
//Cálculo
if (a > b)
{
	if( a > c)
	{
		document.write("O número "+a + " é o maior" + "<br>");
		if (b > c)
		{
			document.write("O número "+c + " é o menor" + "<br>");
		}
		else
		{
			document.write("O número "+b + " é o menor" + "<br>");
		}
	}else{
		document.write("O número "+c + " é o maior" + "<br>");
		document.write("O número "+b + " é o menor" + "<br>");
	}
}
else if(b > c)
{
	document.write("O número "+b + " é o maior" + "<br>");
	if(a > c)
	{
		document.write("O número "+c + " é o maior" + "<br>");
	}
	else
	{
		document.write("O número "+a + " é o menor" + "<br>");
	}
}
else
{
	document.write("O número "+c + " é o maior" + "<br>");
	document.write("O número "+a + " é o menor" + "<br>");
}


</script>



</body>
</html>
