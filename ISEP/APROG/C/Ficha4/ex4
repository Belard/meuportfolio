#include <stdio.h>

float quotaMensal(float a,float b)
{
  float res;
  res= (a*(b/1000))/12;
  return res;
}

void main()
{
  float orc, perm;
  printf("Qual o or√ßamento anual e a permilagem?");
  scanf("%f%f", &orc, &perm);
  printf("\nO valor da quota mensal: %.2f euros", quotaMensal(orc, perm));
}
